                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                                News table
                            </header>
                            <div class="panel-body">
                                <section class="panel">
                                    <header class="panel-heading">
                                        <b> Add News</b>
                                    </header>
                                    <div class="panel-body">
                                        <div class="form">
                                            <form class="cmxform form-horizontal tasi-form" id="signupForm" enctype="multipart/form-data" method="post" action="/Home/Insertnews">
                                                <div class="form-group ">
                                                    <label for="firstname" class="control-label col-lg-2"><b>Heading</b></label>
                                                    <div class="col-lg-10">
                                                        <input class=" form-control" id="add_title" name="heading" required="required" type="text" />
                                                    </div>
                                                </div>

                                                <div class="form-group ">
                                                    <label for="username" class="control-label col-lg-2"><b>Description</b></label>
                                                    <div class="col-lg-10">
                                                        <textarea class="form-control" id="username" name="description" required="required" type="text" />
                                                        </textarea>
                                                    </div>
                                                </div>
                                                <div class="form-group ">
                                                    <label for="username" class="control-label col-lg-2"><b>Image Url</b></label>
                                                    <div class="col-lg-10">
                                                        <input class="form-control" name="image" type="text" />

                                                    </div>
                                                </div>
                                                <div class="form-group ">
                                                    <label for="username" class="control-label col-lg-2"><b>Image Upload</b></label>
                                                    <div class="col-lg-10">
                                                        <input class="form-control " id="username" name="imageUpload" type="file" />

                                                    </div>
                                                </div>
                                                <div class="form-group ">
                                                    <label for="username" class="control-label col-lg-2"><b>Date</b></label>
                                                    <div class="col-lg-10">
                                                        <input class="form-control " id="username" name="date" required="required" type="datetime" />

                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="col-lg-offset-2 col-lg-10">
                                                        <input type="submit" value="Save" class="btn btn-primary">
                                                        <a class="btn btn-danger" href="/Home/Shownews">Back</a>

                                                    </div>
                                                </div>
                                            </form>

                                        </div>
                                    </div>
                                </section>
                            </div>
                        </section>
